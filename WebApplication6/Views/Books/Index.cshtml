@model IEnumerable<Domain.Models.Books>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<br />
<div class="mt-5" style="background-color :pink;  border :2px solid pink;">
    <h3 style="text-align: center;text-decoration: solid;text-decoration: underline; font-family: Arapey, serif; text-wrap: wrap; color: black;"><i>Books</i></h3>
</div>
<br>
<div>
    <div class="container">
        <div class="row justify-content-evenly gy-3">
            @foreach (var i in Model)
            {
                var imageUrl = Url.Content(i.ImageUrl);
                <div class="card text-center col-md-3 col-sm-6 col-12 " style="width: 18rem;">

                    <img src="@imageUrl" class="card-img-top mt-1" alt="Kite runner">
                    <div class="card-body">

                        <h5 class="card-title">@i.Bookname</h5>
                        <p class="card-text">Price:@i.Price.ToString("c")</p>
                        <p class="card-text">Desc:@i.Description</p>
                        <a class="icon-link btn" asp-controller="home" asp-action="cart" class="btn" style="background-color: rgba(248, 154, 170, 0.733);">Add to cart</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Mycss1 {
    <link href="~/css1/LoginStyle.css" rel="stylesheet" />
}