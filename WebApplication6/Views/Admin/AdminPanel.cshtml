@{
    Layout = "_Layout";
}

<style>
    .bg-pink {
        background-color: pink;
    }

    .text-pink {
        color: pink;
    }

    .btn-outline-pink {
        color: pink;
        border-color: pink;
    }

        .btn-outline-pink:hover {
            color: white;
            background-color: pink;
            border-color: pink;
        }

    .btn-bg-pink {
        background-color: pink;
        color: white;
    }

        .btn-bg-pink:hover {
            background-color: darken(pink, 10%);
            color: white;
        }
</style>

<div class="container" style="margin-top:10%;margin-bottom:10%;">
    <div class="row">
        <!-- Books Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header text-white" style="background-color:grey;">
                    <h2 class="mb-0">Books</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Add", "Books")">Add Book</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Edit", "Books")">Edit Book</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Delete", "Books")">Delete Book</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Index", "Books")">All Books</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Bookmarks Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header text-white" style="background-color:grey;">
                    <h2 class="mb-0">Bookmarks</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("AddBookmark", "Bookmarks")">Add Bookmark</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn  w-100" href="@Url.Action("Edit", "Bookmarks")">Edit Bookmark</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn  w-100" href="@Url.Action("Delete", "Bookmarks")">Delete Bookmark</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Index", "Bookmarks")">All Bookmarks</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Booksleeves Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header text-white" style="background-color:grey;">
                    <h2 class="mb-0">Booksleeves</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class=" btn  w-100" href="@Url.Action("AddBooksleeves", "Booksleeves")">Add Booksleeve</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn w-100" href="@Url.Action("Edit", "Bookmarks")">Edit Booksleeve</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn  w-100" href="@Url.Action("Delete", "Bookmarks")">Delete Booksleeve</a>
                        </li>
                        <li class="list-group-item">
                            <a style="background-color: #d8bfd8" class="btn  w-100" href="@Url.Action("Index", "Bookmarks")">All Booksleeve</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
