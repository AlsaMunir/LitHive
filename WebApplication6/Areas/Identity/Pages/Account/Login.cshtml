@page
@model LoginModel

<div class="login1" style="background-image: url('@Url.Content("~/images/fic.jpg")');">

    <div class="login" >
        <form id="account" method="post"  style="background:transparent; backdrop-filter:blur(15px);border-radius:10%;">
               
                <div asp-validation-summary="ModelOnly" class="text-danger mt-2" role="alert"></div>
                <div class="form-floating mt-4 mb-3 text-black">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 text-black">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
               
                <div class="p-2" >
                  
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                <div class="p-2">
                  
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
                     <div class="signup-link p-2">
                         <br />
                      Not a member?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
                    </div>
                   
                </div>
            </form>
       
    </div>

 </div>
 @section Mycss1{
<link href="~/css1/LoginStyle.css" rel="stylesheet" />
 }
@section Welcome {
    <h2 class="text-light">Welcome Back!!</h2>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

